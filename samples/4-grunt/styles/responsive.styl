
$background = #fff;
$background-mobile = url(lib/grey_wash_wall.png);

/*** Esri Map ***/
.map {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
  min-height: 100px;
  max-height: 100%;
  text-align: left;
  overflow: hidden;
}

.map > img {
   text-align: left;
}

/*** Restyle Esri Zoomin-out ***/
.esriSimpleSlider {
  border: 1px solid #cccccc;
  top: 15px;
  left: 15px;
}
.esriSimpleSliderVertical .esriSimpleSliderIncrementButton,
.esriSimpleSliderVertical .esriSimpleSliderDecrementButton{
  font-weight: 500;
  font-size: 20px;
  line-height: 27px;
}
.esriSimpleSliderVertical .esriSimpleSliderIncrementButton {
  border-bottom: 1px solid #cccccc;
}

.container.main {
  margin-top: 0;
  margin-bottom: 15px;
}

.row {
  margin-bottom: 0;
}

[class*="col-"] {
    margin-bottom: 10px;
}

/* Extra small devices (phones, up to 480px) */
@media (max-width: 480px) {
  body {
    background-image: $background-mobile;
  }
  .map {
    height: 100px;
  }
  .container.main {
    margin-top: 10px;
  }
}

@media (min-width: 481px) and (max-width: 767px) {
    body {
      background-image: $background-mobile;
    }
  .map {
    height: 150px;
  }
  .container.main {
    margin-top: 10px;
  }
}

/* Small devices (tablets, 768px and up) - Portrait to Landscape */
@media (min-width: 768px) {
    body {
      background-image: $background-mobile;
    }
  .map {
    height: 200px;
  }
  .row {
    margin-bottom: 20px;
  }
}

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px) {
  body {
    background: $background;
  }
  .map {
    height: 300px;
  }
  .container.main {
    padding: 10px;
  }
}

/* Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {
  body {
    background: $background;
  }
  .map {
    height: 400px;
  }
  .container.main {
    padding: 10px;
  }
}
